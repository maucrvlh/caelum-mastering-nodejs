<% include ../includes/header.ejs %>

<div>
    <div class ="container min-container">
        <h2 class="basic-title">Add</h2>

        <% if (locals.errors) { %>
          <ul class="list-unstyled">
            <% for (var i=0; i < errors.length; i++) { %>
              <li class="alert alert-danger"> <%= errors[i].msg %></li>
            <% } %>
          </ul>
        <% } %>

        <form action="/produtos" method="post" class="well" role="form">
            <div class="form-group">
                <label for="titulo">Titulo</label>
                <div class="input-group">
                    <input type="text" name="titulo" value="<%= livro.titulo %>" placeholder="titulo do livro"/>
                </div>
            </div>
            <div class="form-group">
                <label for="preco">Pre√ßo</label>
                <div class="input-group">
                    <input type="text" name="preco" value="<%= livro.preco %>" placeholder="valor do livro"/>
                </div>
            </div>
            <div class="form-group">
                <label for="descricao">Descricao</label>
                <div class="input-group">
                    <textarea name="descricao" value="<%= livro.descricao %>"><%= locals.livro.descricao %></textarea>
                </div>
            </div>
            <button type="submit" class="btn btn-primary">Gravar</button>
        </form>
    </div>
</div>

<% include ../includes/footer.ejs %>
